      .c-purple-light.color-block.us-col-4
        .color-block-inner $c-purple-light: tint($c-purple, 30%)
      .c-purple-dark.color-block.us-col-4
        .color-block-inner $c-purple-dark: shade($c-purple, 15%) 

      .us-grid-row
      .c-orange-lightest.color-block.us-col-4
        .color-block-inner $c-orange-lightest: tint($c-orange, 60%)
      .c-orange-light.color-block.us-col-4
        .color-block-inner $c-orange-light: tint($c-orange, 30%)
      .c-orange-dark.color-block.us-col-4
        .color-block-inner $c-orange-dark: shade($c-orange, 15%) 

      .us-grid-row
