.styleguide-block{id: @title.downcase.gsub(" ", "-")}
  .us-container
    .us-grid-row
      .styleguide-column.styleguide-column--information.us-col-6  
        .styleguide-description{data: {section: @section.section}}= @markdown.render(@section.description)
        %h4 #{@section.filename}
                
        - if @section.modifiers.any?
          %ul
            - @section.modifiers.each do |modifier|
              %li 
                %strong #{modifier.name} 
                \- #{modifier.description}


      .styleguide-column.styleguide-column--elements.us-col-6
        .modifier-block
          = @example_html
          
          %pre.code-block__code
            %code{class: :xml}= h @example_html.gsub(" modifier-class", "")

          .code-block
            - if @sass_output
              %pre.code-block__code
                %code{class: :scss}= @sass_output

        - @section.modifiers.each do |modifier|

          .modifier-block
            .modifier-block__description
              %code.modifier-block__class #{modifier.name}

            .modifier-block__html
              = @example_html.gsub("modifier-class", modifier.class_name)