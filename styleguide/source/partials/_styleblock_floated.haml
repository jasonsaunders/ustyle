%h1 #{@section.section} #{@section.filename}

.us-grid-row
  .us-col-6
    %p.styleguide-description= @section.description
    - if @section.modifiers.any?
      %ul
        - @section.modifiers.each do |modifier|
          %li #{modifier.name} - #{modifier.description}
          
  .us-col-6
    .modifier_block= @example_html

    %pre
      %code{class: :xml}= h @example_html.gsub("modifier-class", "")

    - @section.modifiers.each do |modifier|
      .modifier_block
        = @example_html.gsub("modifier-class", modifier.class_name)

      %pre
        %code{class: :xml}= h @example_html.gsub("modifier-class", modifier.class_name)