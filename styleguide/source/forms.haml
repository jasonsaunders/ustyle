.us-container
  %h1.styleguide-title Forms
  = styleblock_nav(["Form fields", "Form inputs", "Inputs with backgrounds", "Radios and checkboxes", "Selects", "Form validation"])

= styleblock "2.1", "Form fields", {floated: true, sass: "forms"} do
  .us-field.modifier-class
    %label{for: "name"} Name
    %input#name.us-form-input{name: "Name", placeholder: "Please enter a name"}

  .us-field.modifier-class
    %label{for: "gender"} Gender
    %span.us-form-select-wrap
      %select.us-form-select
        %option Male
        %option Female

= styleblock "2.2", "Form inputs", {floated: true, sass: "forms"} do
  %input.us-form-input.modifier-class

= styleblock "2.2.1", "Inputs with backgrounds", {floated: true, sass: "forms"} do
  %input.us-form-input.modifier-class{type: :text}

= styleblock "2.3", "Radios and checkboxes", {floated: true, sass: "forms"} do
  .us-field.us-field-blocked
    %label Do you have a different billing address?
    .us-field-toggle
      %label
        %input.us-form-input{:type=>'radio',:name=>'null',:checked => :checked} Yes
      %label
        %input.us-form-input{:type=>'radio',:name=>'null'} No

  .us-field.us-field-blocked
    %label How would you like to be contacted?
    .us-field-toggle
      %label
        %input.us-form-input{:type=>'checkbox',:name=>'null',:checked => :checked} Mobile
      %label
        %input.us-form-input{:type=>'checkbox',:name=>'null'} Landline
      %label
        %input.us-form-input{:type=>'checkbox',:name=>'null'} Email

= styleblock "2.4", "Selects", {floated: true, sass: "forms"} do
  %span.us-form-select-wrap
    %select.us-form-select.modifier-class
      %option A select menu
      %option With lots of options
      %option And a few more

= styleblock "2.5", "Form validation", {floated: true, sass: "forms"} do
  .us-field.us-field-blocked
    .us-validation
      .us-validation-icon
      .us-validation-message
        We use your email address to contact you if there is a problem with your account.

    %label.validation Your email address

    %input.us-form-input{value: ''}

  .us-field.us-field-blocked
    .us-validation.error
      .us-validation-icon
      .us-validation-message
        Please enter a valid email address.

    %label.validation Your email address

    %input.us-form-input{value: 'name@domain'}

  .us-field.us-field-blocked
    .us-validation.success
      .us-validation-icon
      .us-validation-message
        That looks great!

    %label.validation Your email address

    %input.us-form-input{value: 'name@domain.com'}
