      %a.us-guide-item-link{:href => "http://www.uswitch.com/car-insurance/guides/"}
        .us-guide-item-image-container
          .us-guide-item-image.background{:style => "background-image: url(http://www.uswitch.com/insurance/assets/guide-home-16141c84afd29e2063ee76803037716c.jpg)"}
        .us-guide-item-content
          %h4.us-guide-item-title Car insurance guides
          %p.us-guide-item-description Read our car insurance advice guides for the facts on why you need car insurance, the types of cover available, and tips on how to make a claim.
        .us-guide-item-readmore 
