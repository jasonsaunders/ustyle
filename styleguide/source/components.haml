  = styleblock "4.1", "News item", false do
    .us-news-item
      %a.us-news-item-link{href: "#"}
        .us-news-item-image-container
          .us-news-item-image.background{:style => "background-image: url(http://uswitch-wp-blog-assets.s3-website-eu-west-1.amazonaws.com/wp-content/uploads/2013/09/Untitled-1.jpg)"}
