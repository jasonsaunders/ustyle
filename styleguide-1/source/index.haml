        .color-block__var $c-keylinegrey
      .c-bordergrey.color-block.us-col-3
        .color-block__hex #bbbbbb
        .color-block__var $c-bordergrey
      .c-inputgrey.color-block.us-col-3
        .color-block__hex #97999a
        .color-block__var $c-inputgrey

    %h3 Secondary (call out colours)

