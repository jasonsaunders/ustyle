.us-container    
  %section.colors
    %h1 Color palette

    %h3 Primary (brand blues)

    .us-grid-row
      .c-cyan.color-block.us-col-3
        .color-block__hex #99e2ff
        .color-block__var $c-cyan
      .c-typecyan.color-block.us-col-3
        .color-block__hex #008fe9
        .color-block__var $c-typecyan
      .c-blue.color-block.us-col-3
        .color-block__hex #174695
        .color-block__var $c-blue
      .c-navy.color-block.us-col-3
        .color-block__hex #1c1f4e
        .color-block__var $c-navy


    %h3 Typography greys

    .us-grid-row
      .c-typegrey-2.color-block.us-col-6
        .color-block__hex #767676
        .color-block__var $c-typegrey-2
      .c-typegrey.color-block.us-col-6
        .color-block__hex #333333
        .color-block__var $c-typegrey
 

    %h3 Background greys

    .us-grid-row
      .c-bggrey.color-block.us-col-3
